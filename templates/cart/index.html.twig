{% extends 'base.html.twig' %}

{% block title %}Votre Panier{% endblock %}

{% block body %}
<div class="container mt-5">
    <h1 class="mb-4">üõí Votre panier</h1>

    {% if items is empty %}
        <div class="alert alert-info">Votre panier est vide.</div>
    {% else %}
        <table class="table table-bordered table-hover text-center align-middle">
            <thead class="table-success">
                <tr>
                    <th>Produit</th>
                    <th>Prix unitaire</th>
                    <th>Quantit√©</th>
                    <th>Total</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                {% for item in items %}
                    <tr>
                        <td>{{ item.product.name }}</td>
                        <td>{{ item.product.price }} ‚Ç¨</td>
                        <td>{{ item.quantity }}</td>
                        <td>{{ (item.product.price * item.quantity)|number_format(2, '.', ',') }} ‚Ç¨</td>
                        <td>
                            <div class="btn-group" role="group">
                                <a href="{{ path('cart_add', {'id': item.product.id}) }}" class="btn btn-success btn-sm" title="Ajouter">‚ûï</a>
                                <a href="{{ path('cart_decrement', {'id': item.product.id}) }}" class="btn btn-warning btn-sm" title="R√©duire">‚ûñ</a>
                                <a href="{{ path('cart_remove', {'id': item.product.id}) }}" class="btn btn-danger btn-sm" title="Supprimer">üóëÔ∏è</a>
                            </div>
                        </td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>

        <div class="text-end mb-4">
            <h4>Total : <strong>{{ total|number_format(2, '.', ',') }} ‚Ç¨</strong></h4>
        </div>

        <div class="d-flex justify-content-between">
            <a href="{{ path('cart_clear') }}" class="btn btn-outline-danger">
                üßπ Vider le panier
            </a>
            <a href="{{ path('app_cart_checkout') }}" class="btn btn-primary">
                üí≥ Payer
            </a>
        </div>
    {% endif %}
</div>
{% endblock %}
